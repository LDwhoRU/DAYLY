<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DAYLY.Views.TitleCode">
    <!-- Copy Shell.TitleView for logo, also remove Title in Contentpage -->
    
    <Shell.TitleView>
        <Image Source="logo_title.png" VerticalOptions="Center" HeightRequest="60" Scale=".8"/>
    </Shell.TitleView>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>