                    </StackLayout.GestureRecognizers>
                    <Image Source="monthly_inactive.png" />
                    <Label Text="MONTHLY" Grid.Column="2" FontSize="15" TextColor="#6D8CA0" VerticalOptions="Center"/>
                   
                </StackLayout>
            </Grid>

